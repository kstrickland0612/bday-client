{{#each events as |event|}}
  {{log event}}
  <section data-id="{{event.id}}">
    <span>
    {{event.title}}
    </span>
    <span>
      {{event.category}}
    </span>
    <span>
      {{event.date}}
    </span>
    <p>
      {{event.action}}
    </p>
    <p>
      {{event.friend_id}}
    </p>

    <!-- this opens a modal for editing each event -->
    <button type="button" class="btn btn-primary edit-event" data-toggle="modal" data-target="#event-modal-{{event.id}}">
      Edit
    </button>

    <!-- Edit Event form within a modal-->

    <div class="modal fade" id="event-modal-{{event.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel{{event.id}}" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel{{event.id}}">Edit Event</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              <form class="edit-event-form" data-id="{{event.id}}">
                <input type="integer" class="form-control" name="friend_id" placeholder="Friend ID">
                <input type="text" class="form-control" name="title" placeholder="Event Name">
                <input type="text" class="form-control" name="category" placeholder="Category">
                <input type="date" class="form-control" name="date" placeholder="Event Date">
                <input type="text" class="form-control" name="action" placeholder="Something Special">
                  <input type="submit" class="btn btn-primary edit-event-button" value="Edit Event">
              </form>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

    <button class="btn btn-danger delete-event" data-id="{{event.id}}">Delete</button>

  </section>
{{/each}}
