<table class="table table-borderless table-hover">
  <thead>
    <tr>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each friends as |friend|}}
      {{log friend}}
      <tr>
        <th scope="row" data-id="{{friend.id}}"></th>
        <td>{{friend.first_name}} {{friend.last_name}}</td>
        <td>
          <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseEvents-{{friend.id}}" aria-expanded="false" aria-controls="#collapseEvents-{{friend.id}}">
            Events
          </button>

          <div class="collapse" id="collapseEvents-{{friend.id}}">
            <div class="card card-body">
              <p>This feature is coming soon</p>
            </div>
          </div>
        <td>
        <!-- this opens a modal for editing each friend -->
        <button type="button" class="btn btn-primary edit-friend" data-toggle="modal" data-target="#friend-modal-{{friend.id}}">
          Edit
        </button>
        <!-- Edit Friend form within a modal-->
        <div class="modal fade" id="friend-modal-{{friend.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel{{friend.id}}" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel{{friend.id}}">Edit Friend</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">

                  <form class="edit-friend-form" data-id="{{friend.id}}">
                      <div class="edit-friend-message"></div>
                      <input type="text" class="form-control" name="first_name" placeholder="First Name">
                      <input type="text" class="form-control" name="last_name" placeholder="Last Name">
                      <input type="date" class="form-control" name="dob" placeholder="Birthdate">
                      <input type="submit" class="btn btn-primary edit-friend-button" value="Edit Friend">
                  </form>

                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        </td>
        <td>
        <button class="btn btn-danger delete-friend" data-id="{{friend.id}}">Delete</button>
        </td>

      </section>
    {{/each}}
